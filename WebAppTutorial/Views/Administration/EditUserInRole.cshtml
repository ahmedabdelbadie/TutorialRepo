@model List<UserRoleViewModel>
@{
    var roleId = ViewBag.roleId;
}
<form method="post">
    <div class="card">
        <div class="card-header">
            <h1>Add or Remove Users</h1>

        </div>
        <div class="card-body">
            @for (int i = 0; i < @Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input hidden asp-for="@Model[i].UserName"/>
                    <input hidden  asp-for="@Model[i].UserId"/>
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].UserName

                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" style="width:auto" />
            <a asp-action="EditRole" asp-rout-id="@roleId" class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
</div>

</form>