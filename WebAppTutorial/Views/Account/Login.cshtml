@model LoginViewModel
@{
    ViewBag.PageTitle = "User Login";
}

<h1>User Login</h1>



<form asp-action="login" asp-controller="account">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" id="inputEmail" placeholder="Email">
        <span asp-validation-for="Email" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" id="inputPassword" placeholder="Password">
        <span asp-validation-for="Password" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label class="form-check-label"><input asp-for="RememberMe" type="checkbox">@Html.DisplayNameFor(x=>x.RememberMe)</label>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>
