                    @*@Ajax.ActionLink("Home", "Delete", new { id = emp.Id }, new AjaxOptions { HttpMethod = "POST" })*@
                </button>
                <button type="button" class="btn btn-info">
                    <a asp-controller="Home" asp-action="Edit" asp-route-id="@emp.Id" class="" style="text-decoration:none;color:white;">Edit</a>
                </button>
            </div>
        </div>
    }
</div>
