<div class="row justify-content-between">

    @foreach (var emp in Model.Employees)
    {
        var photoPath = "~/images/" + (emp.photoPath ?? "car.png");
        <div class="card" style="width: 33%;">
            <img src="@photoPath" class="card-img-top imageThumb justify-content-center" asp-append-version="true">
            <div class="card-body">
                <h5 class="card-title">@emp.Name</h5>
                <button type="button" class="btn btn-secondary">
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@emp.Id" class="" style="text-decoration:none;color:white;">View</a>
                    @*@Html.ActionLink("View", "Details", new { id = emp.Id },new {style="text-decoration:none;color:white;"})*@
                </button>

                <button type="button" class="btn btn-danger">
                    @*@Html.ActionLink("Delete", "Delete", new { id = emp.Id },new {style="text-decoration:none;color:white;"})*@
